<article class="product-page">
	<div class="product-page__card card__product-page">
		<figure class="card__image">
			<img src={{product.img}} alt={{product.imgAlt}}>
		</figure>
		<div class="card__content">
			<h1 class="card__title">{{product.prodname}}</h1>
			<p class="card__brand">{{product.brand}}</p>

			<div class="card__container">
				<div class="card__price-wrapper">
					<p class="price__text">
						<span class="price__current">{{product.price}}</span>
						<i class="price__current__icon" id="rub"></i>
					</p>
					<p class="price__text">
						<span class="price__prev">{{product.prevPrice}}</span>
						<i class="price__prev__icon" id="rub"></i>
					</p>
				</div>
			</div>

			<div class="card__rating">
				Количество просмотров: {{product.rating}}
			</div>

			<div class="card__info info__card">
				<h3 class="info__title">Описание:</h3>
				<p class="info__desc">{{product.description}}</p>
				<h3 class="info__title">Характеристики:</h3>
				<ul class="info__char char__info">
					{{#if product.size}}
					<li class="char__item">
						<strong class="char__name">Размер:</strong>
						<div class="char__desc">{{product.size}}</div>
					</li>
					{{/if}}
					{{#if product.material}}
						<li class="char__item">
							<strong class="char__name">Материал:</strong>
							<div class="char__desc">{{product.material}}</div>
						</li>
					{{/if}}
					{{!-- {{#if product.colors}} --}}
						<li class="char__item">
							<strong class="char__name">Цвет:</strong>
							<div class="char__desc">
								<div class="char__color" style="background: {{product.colors}};"></div>
							</div>
						</li>
					{{!-- {{/if}} --}}
					{{#if product.optional}}
						<li class="char__item">
							<strong class="char__name">Дополнительно:</strong>
							<div class="char__desc">{{product.optional}}</div>
						</li>
					{{/if}}
					{{#if product.shewingPeriod}}
						<li class="char__item">
							<strong class="char__name">Срок пошива:</strong>
							<div class="char__desc">{{product.shewingPeriod}}</div>
						</li>
					{{/if}}
					{{#if product.deliveryTime}}
						<li class="char__item">
							<strong class="char__name">Срок доставки:</strong>
							<div class="char__desc">{{product.deliveryTime}}</div>
						</li>
					{{/if}}
				</ul>	
			</div>
		</div>

	</div>
</article>

<style>

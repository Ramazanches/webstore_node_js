	}
	.card__rating {
		font-size: var(--h4);
	}
	.card__info {
		margin-top: auto;
	}
	.info__title {
		margin: var(--gap-md) 0;
		font-size: var(--h3);
	}
	.info__desc {
		font-size: var(--h5);
		line-height: var(--h5_h);
	}
	.info__char {
	}
	.char__item {
		margin-top: var(--gap-sm);
		display: flex;
		align-items: center;
		column-gap: var(--gap-md);
	}
	.char__name {
		font-size: var(--h5);
		line-height: var(--h5_h);
		white-space: nowrap;
	}
	.char__desc {
		display: flex;
		flex-wrap: nowrap;
		column-gap: 10px;
		font-size: var(--h5);
		line-height: var(--h5_h);
	}
	.char__color {
		width: 20px;
		height: 20px;
		border-radius: 50%;
		border: 1px solid #000;
	}

	@media (max-width: 996px) {
	  .card {
	  	flex-direction: column;
	  	row-gap: 40px;
	  }
		.card__image {
			padding: 0 var(--inner-lg) var(--inner-lg);
			width: 100%;
		}
		.card__content {
			width: 100%;
		}
		.char__item {
			align-items: flex-start;
		}
	}
	@media (max-width: 500px) {
	  .char__item {
	  	margin-top: 20px;
	  	flex-direction: column;
	  	column-gap: unset;
	  	row-gap: 5px;
	  }
	}
</style>



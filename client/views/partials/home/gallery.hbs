<div class="gallery__wrapper">
	{{#each products}}
    <div 
      class="gallery__item item__gallery  _anim-scroll" 
      id="productItem"
      data-id={{this._id}}
    >
      {{> product/img}}
      <div class="item__content">
        {{> product/price}}
        {{> product/label}}
      </div>
      {{> product/icons}}          
    </div>
	{{/each}}
</div>

{{> product/imgCss}}
{{> product/iconsCss}}
{{> product/labelCss}}
{{> product/priceCss}}

<style> 

.gallery__wrapper {
  padding: 0 var(--inner);
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(var(--productWidth), 300px));
  grid-gap: 40px;
  justify-content: center;
}
.gallery__item {
  position: relative;
  padding: 15px;
  row-gap: 50px;
  display: flex;
  color: #fff;  
  flex-direction: column;
  align-items: center;
  border-radius: 3px;
  cursor: pointer;
  border: 1px solid transparent;
  overflow: hidden;
  box-sizing: border-box;
}

.gallery__item:after {
  content: '';
  position: absolute;
  bottom: 1px;
  width: 0%;
  height: 1px;
  background: #fff;
  transition: all .6s ease 1s;
}

.gallery__item._active:after {
  width: calc(100% - var(--inner));
}

.gallery__item:hover {
  border: 1px solid #fff;
}

.gallery__item:hover:after {
  transition-delay: 0s;
  transition-duration: .1s;
  width: 0%;
}

.item__link,
.item__content,
.item__label {
  pointer-events: none;
}

</style>
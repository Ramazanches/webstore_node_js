
<header class="header">
  <div class="header__container">
    {{> header/logo}}
    <div class="header__menu menu">
      {{> navigation/nav}}
      {{> header/cart}}    
      <a 
        href="/products/liked" 
        class="menu__link"
        id="heart">
      </a> 
      {{> header/menu_icon}}
    </div>

  </div>
</header>

<style>
  .header {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 10;
    background-color: var(--sec_4);
  }
  .header__container {
    margin: 0 auto;
    display: flex;
    padding: 0 var(--inner-lg);
    align-items: center;
    justify-content: space-between;
    min-height: 70px;
  }
  .header__menu {
    display: flex;  
    align-items: center;  
    column-gap: var(--inner);
  }
  .menu__link {
    color: #fff;
    text-decoration: none;
  }
  .menu__link svg {
    width: 25px;
    height: 25px;
  }
</style>  